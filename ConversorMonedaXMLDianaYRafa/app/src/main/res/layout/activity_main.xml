<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/origen_edit"
        android:layout_width="366dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="MONEDA ORIGEN"
        android:inputType="numberDecimal"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/origen_spinner"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/origen_spinner"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/destino_edit"
        android:layout_width="366dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="316dp"
        android:ems="10"
        android:hint="MONEDA DESTINO"
        android:inputType="numberDecimal"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/destino_spinner"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/destino_spinner"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/origen_edit"
        app:layout_constraintVertical_bias="0.018" />

    <Switch
        android:id="@+id/sXML"
        android:layout_width="116dp"
        android:layout_height="56dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvSAX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAXX"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/sXML"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sXML" />

    <TextView
        android:id="@+id/tvDOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOM"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/sXML"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@+id/sXML"
        app:layout_constraintTop_toTopOf="@+id/sXML"
        app:layout_constraintVertical_bias="0.458" />

    <TextView
        android:id="@+id/txtLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="216dp"
        android:layout_marginRight="216dp"
        android:layout_marginBottom="76dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/sXML"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destino_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>